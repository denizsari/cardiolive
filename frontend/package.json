{
  "name": "cardiolive",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:forms": "jest __tests__/form-*.test.tsx",
    "test:forms:watch": "jest __tests__/form-*.test.tsx --watch",
    "test:forms:coverage": "jest __tests__/form-*.test.tsx --coverage",
    "test:integration": "jest __tests__/form-integration.test.tsx",
    "test:components": "jest __tests__/form-components.test.tsx",
    "test:advanced": "jest __tests__/form-advanced-features.test.tsx",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --verbose --no-cache",
    "test:update-snapshots": "jest --updateSnapshot",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@tanstack/react-query": "^5.79.0",
    "@tanstack/react-query-devtools": "^5.79.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.511.0",
    "next": "^15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "swiper": "^11.2.8",
    "tailwind-merge": "^3.3.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0-beta.3",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-testing-library": "^6.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "sharp": "^0.34.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "description": "This is a [Next.js](https://nextjs.org) project bootstrapped with [`create-next-app`](https://nextjs.org/docs/app/api-reference/cli/create-next-app).",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denizsari/cardiolive.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/denizsari/cardiolive/issues"
  },
  "homepage": "https://github.com/denizsari/cardiolive#readme"
}
